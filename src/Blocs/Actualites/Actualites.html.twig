<div class="grid-3 small-1 has-gutter-xl">
    {% for page in actualites(bloc.contenu.limite, bloc.contenu.categorie) %}
        <div class="blocActualites-page flex-container-v">
            {{ getBlocAnnexe(page, 'vignette')|raw }}
            <h2>{{ page.titre }}</h2>
            {{ getBlocAnnexe(page, 'resume')|raw }}
            <a href="{{ path("voirPage", { '_locale': page.langue.abreviation, 'url': page.seo.url}) }}">{% trans %}Voir la page{% endtrans %}</a>
        </div>
    {% endfor %}
</div>