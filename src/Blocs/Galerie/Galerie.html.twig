<div id="galerie{{ bloc.id }}" class="grid-4-small-2-tiny-1 has-gutter-l">
    {% if bloc.contenu.affichage is not defined or bloc.contenu.affichage == 'lightbox' %}
        {% for elementGalerie in bloc.contenu.images|sortBy('position') %}
            <div>
                <a
                class="galerie"
                data-fancybox="galerie{{ bloc.id }}"
                data-caption="
                    {% if elementGalerie.image.titre is defined and elementGalerie.image.titre is not empty %}
                        <p><strong>{{ elementGalerie.image.titre }}</strong></p>
                    {% endif %}
                    {% if elementGalerie.image.description is defined and elementGalerie.image.description is not empty %}
                        <p>{{ elementGalerie.image.description }}</p>
                    {% endif %}
                    {% if elementGalerie.lien is defined and elementGalerie.lien is not empty %}
                        <p><a href='{{ elementGalerie.lien }}' {% if elementGalerie.blank is defined and elementGalerie.blank %}target='_blank'{% endif %}>{{ elementGalerie.lien }}</a></p>
                    {% endif %}
                "
                href="{{ elementGalerie.image.image }}">
                    <img src="{{ elementGalerie.image.image }}" {% if elementGalerie.image.titre is not empty %}alt="{{ elementGalerie.image.titre }}"{% endif %} {% if elementGalerie.image.description is not empty %}title="{{ elementGalerie.image.description }}"{% endif %}>
                </a>
            </div>
        {% endfor %}
    {% else %}
        {% for elementGalerie in bloc.contenu.images|sortBy('position') %}
            <div>
                {% if elementGalerie.lien is not empty %}
                    <a class="galerie" href="{{ elementGalerie.lien }}" {% if elementGalerie.blank is defined and elementGalerie.blank %}target="_blank"{% endif %}>
                {% endif %}
                    <img src="{{ elementGalerie.image.image }}" {% if elementGalerie.image.titre is not empty %}alt="{{ elementGalerie.image.titre }}"{% endif %} {% if elementGalerie.image.description is not empty %}title="{{ elementGalerie.image.description }}"{% endif %}>
                {% if elementGalerie.lien is not empty %}
                    </a>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>