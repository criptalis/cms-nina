{% if bloc.contenu is not empty %}
    {% if bloc.contenu.titre is not empty %}
        <figure>
            {% if bloc.contenu.image is not empty %}
                <img src="{{ bloc.contenu.image }}" {% if bloc.contenu.description is not empty %}alt="{{ bloc.contenu.description }}"{% endif %}>
            {% endif %}
            <figcaption>{{ bloc.contenu.titre }}</figcaption>
        </figure>
    {% else %}
        {% if bloc.contenu.image is not empty %}
            <img src="{{ bloc.contenu.image }}" {% if bloc.contenu.description is not empty %}alt="{{ bloc.contenu.description }}"{% endif %}>
        {% endif %}
    {% endif %}
{% endif %}
