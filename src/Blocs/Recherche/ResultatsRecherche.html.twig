{% extends 'front/base.html.twig' %}

{% block main %}
    <h1>{{ "Résultats de recherche pour : "|trans }}"{{ app.request.get('recherche') }}"</h1>
    {% if pages is empty %}
        <p class="pas">{{ "Aucun résultat"|trans }}</p>
    {% endif %}
    <div class="blocRecherche">
        {% for page in pages %}
            <h3>{{ page.titre }}</h3>
            <p><a href="
                {% if langues|length > 1 %}
                    {{ path("voirPageLocale", { '_locale': page.langue.abreviation, 'url': page.seo.url}) }}
                {% else %}
                    {{ path("voirPage", { 'url': page.seo.url}) }}
                {% endif %}
            ">{{ "Voir la page"|trans }}</a></p>
        {% endfor %}
    </div>
{% endblock %}