{% if 'youtube' in bloc.contenu.video or 'youtu.be' in bloc.contenu.video %}
    {% if '?v=' in bloc.contenu.video %}
        {% set url = bloc.contenu.video|split('?v=')|last %}
    {% else %}
        {% set url = bloc.contenu.video|split('/')|last %}
    {% endif %}
    <iframe src="https://www.youtube.com/embed/{{ url }}?rel=0" frameborder="0" allowfullscreen width="100%" height="500"></iframe>
{% else %}
    <iframe src="{{ bloc.contenu.video }}" frameborder="0" allowfullscreen width="100%" height="500"></iframe>
{% endif %}