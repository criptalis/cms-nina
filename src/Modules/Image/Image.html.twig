{% if module.contenu.titre is not empty %}
    <figure>
        <img src="{{ module.contenu.image }}" alt="{{ module.contenu.description }}">
        <figcaption>{{ module.contenu.titre }}</figcaption>
    </figure>
{% else %}
    <img src="{{ module.contenu.image }}" alt="{{ module.contenu.description }}">
{% endif %}
