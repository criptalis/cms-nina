<table id="{{ type }}" class="table configBlocs mtm">
    <thead>
    <tr>
        <th>{{ "Nom"|trans }}</th>
        <th>{{ "Description"|trans }}</th>
        <th>{{ "Activ√©"|trans }}</th>
        <th>{{ "Ordre"|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for bloc in blocs|sortBy('priorite') %}
        <tr id="{{ bloc.type }}" class="configBlocs-bloc">
            <td>{{ bloc.nom }}</td>
            <td>{{ bloc.description }}</td>
            <td class="toggle">
                <input class="configBlocs-bloc-actif" type="checkbox" {% if bloc.actif == "oui" %}checked{% endif %} data-toggle="toggle" data-size="mini" data-onstyle="success" data-offstyle="danger" data-on="Oui" data-off="Non">
            </td>
            <td class="txtcenter"><i class="dragConfigBloc fas fa-arrows-alt"></i></td>
        </tr>
    {% endfor %}
    </tbody>
</table>