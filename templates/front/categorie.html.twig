{% extends 'front/base.html.twig' %}

{% block title %}{{ parent() }} - {{ categorie.nom }}{% endblock %}

{% block main %}
<h1>Liste des pages class√©es dans "{{ categorie.nom }}"</h1>
    <p class="description">{{ categorie.description|raw }}</p>
    <div class="blocPageCategorie grid-3 small-1 has-gutter-xl">
        {% for page in pages %}
            <div class="categorie-page flex-container-v">
                {{ blocAnnexe(page, 'Vignette') }}
                <h2>{{ page.titre }}</h2>
                {{ blocAnnexe(page, 'Resume') }}
                <a class="bouton" href="{{ path("voirPage", { '_locale': page.langue.abreviation, 'url': page.seo.url}) }}">{% trans %}Voir la page{% endtrans %}</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}